<% @photo.each do |photo| %>
    <div class="booyah-box col-xs-10 col-xs-offset-1">
    	<h1><%= link_to photo.name, photo_path(photo) %></h1><br />
		

		<p><%= photo.caption %></p><br />
	
		<% if photo.user.present? %>
			<small><%= photo.user.email %></small>
		<% end %>
	    
    
	    <% if photo.caption.present? %>
		    <div class="col-xs-12">
				<blockquote>
					<% if photo.caption.last.humanized_rating.present? %>
						<b><%= photo.caption.last.humanized_rating %></b>
					<% end %>
						<%= photo.caption.last.message %>
						<small><%= photo.caption.last.user.email %></small>
				</blockquote>
			</div>
		<% end %>
    
	</div>
    


<% end %>