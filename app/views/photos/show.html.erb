<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= @photo.name %></h1>
   <br/><br/>
  <p><%= @photo.description %></p>

  <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
     #map {
    height: 300px;
  }
</style>
  
 
<br />

  <div class="pull-right">
    <% if current_user && current_user == @photo.user %>
      <%= link_to 'Edit', edit_photo_path(@photo), :class => 'btn btn-primary' %>
      <%= link_to 'Destroy', photo_path(@photo), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'},:class => 'btn btn-danger' %>
    <% end %>
  </div>

  <div class="clear"></div>




<!-- Modal -->
<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="photoLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="photoLabel">Add a photo</h4>
      </div>
      
        <%= simple_form_for @photo, :url => place_photos_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :caption %>
          <%= f.submit "Add a Photo", :class => 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
  

  <h1 class="pull-left">Photos</h1>
  <!-- Button trigger modal -->
  <button class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#photoModal">
    Add a caption
  </button>
</div>

<div class="clear"></div>

<% @place.comments.each do |comment| %>
  <div class="col-xs-12 col-sm-6">
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>



